{% macro button(text='Default', action='', pos_x=0, pos_y=0, width=18, height=5, class='', id='', halign="center") %}
  {% if halign == "center" %}
<frame pos="{{pos_x + (width/2)}}  {{pos_y - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}" id="{{id}}">
{% else %}
<frame pos="{{pos_x}} {{pos_y - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}" id="{{id}}">
  {% endif %}
  <label size="{{width}} {{height}}" text="{{text}}" class="{{class}} uiButtonElement" halign="{{halign}}" valign="center" scriptevents="1" translate="0" />
</frame>
{% endmacro %}

{% macro button_basic(text='Default', action='', pos_x=0, pos_y=0, width=18, height=5, class='', id='', halign='center') %}
