{% macro button_outline(text='Default', action='', pos_x=0, pos_y=0, width=18, height=5, class='', id='') %}
<frame pos="{{pos_x + (width/2)}}  {{pos_y - (height/2)}}" class="uiContainer uiButton" data-action="{{action}}">
  <quad size="{{width*2}} {{height*2}}" style="Bgs1InRace" substyle="BgColorContour" halign="center"
        valign="center2" scale="0.5" class="{{class}}"/>
  <label size="{{width-0.5}} {{height-0.5}}" text="{{text}}" focusareacolor1="0000" class="{{class}} uiButtonElement" halign="center" valign="center2"
           scriptevents="1" translate="0" />
</frame>
{% endmacro %}

