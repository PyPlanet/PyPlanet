{% import 'core.views/generics/uiElements.xml' as ui %}

<frame pos="-160 90" z-index="150" id="Window"> <!-- set z-index high enough -->
	<frame pos="160 -90"> <!-- reset to 0,0 -->

  <frame pos="-120 70"> <!-- window position -->
      {% block header %}
          <label pos="2 -2" textsize="2.5" size="220 7" text="{{title}}" halign="left" valign="top" textprefix="{{icon}}  " textfont="RajdhaniMono"/>
            {% if fields %}
                {{ ui.button("", id+"__button_refresh", 226,0,6,6,"ddd") }} >
                {{ ui.button("✖", id+"__button_close", 232, 0, 6,6,"d00","0000") }} >
            {% else %}
               {{ ui.button("✖", id+"__button_close", 232, 0, 7, 7, "d00", "0000") }}
            {% endif %}
     {% endblock %}

      <frame pos="0 -18">
        {% block contents %} {% endblock %}
      </frame>
    <quad pos="120 0" size="240 140" bgcolor="0003" halign="center"/>
    <quad pos="120 0" size="240 140" halign="center" style="Bgs1" substyle="BgDialogBlur" bluramount="0.1"/>

  </frame>
	</frame>
  <!-- <quad size="320 180" bgcolor="FFFA" style="Bgs1" substyle="BgDialogBlur" bluramount="0.1" scriptevents="1" /> -->
</frame>

<script><![CDATA[ {% include 'core.views/generics/scripts/includes.Script.Txt' %} ]]></script>
{% block maniascript_pre %} {% endblock %}
<script><![CDATA[ {% include 'core.views/generics/scripts/uiElements.Script.Txt' %} ]]></script>
{% block maniascript %} {% endblock %}
<script><![CDATA[ {% include 'core.views/generics/scripts/main.Script.Txt' %} ]]></script>
