{% include 'core.views/style.xml' %}

<frame pos="-160 90" z-index="200"> <!-- set z-index high enough -->
	<frame pos="160 -90"> <!-- reset to 0,0 -->

  <frame pos="-60 70"> <!-- window position -->

      {% block header %}
          <button type="danger" text="x" action="{{id}}__button_close" pos="114 0" size="6 6" />
      {% endblock %}


      <frame pos="0 -8">
        {% block contents %} {% endblock %}
      </frame>

      <quad pos="60 0" size="120 140" style="Bgs1" substyle="BgSystemBar" opacity="0.9" halign="center"/>

    </frame>
	</frame>

  <!-- this is to disable other controls from clicking -->
  <quad size="320 180" bgcolor="0000" scriptevents="1"/>
</frame>

<script><![CDATA[ {% include 'core.views/generics/scripts/includes.Script.Txt' %} ]]></script>
<script><![CDATA[ {% include 'core.views/generics/scripts/uiElements.Script.Txt' %} ]]></script>
{% block maniascript %} {% endblock %}
<script><![CDATA[ {% include 'core.views/generics/scripts/main.Script.Txt' %} ]]></script>
