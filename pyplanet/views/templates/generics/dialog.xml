{% import 'core.views/generics/uiElements.xml' as ui %}

<frame pos="-160 90" z-index="200"> <!-- set z-index high enough -->
	<frame pos="160 -90"> <!-- reset to 0,0 -->

  <frame pos="-60 70"> <!-- window position -->

      {% block header %}
          {{ ui.button("x", id+"__button_close", 114, 0, 6, 6, "d00", "000") }}
      {% endblock %}


      <frame pos="0 -8">
        {% block contents %} {% endblock %}
      </frame>

      <quad pos="60 0" size="120 140" bgcolor="0003" halign="center"/>
      <quad pos="60 0" size="120 140" halign="center" style="Bgs1" substyle="BgDialogBlur" bluramount="0.1"/>

    </frame>
	</frame>

  <!-- this is to disable other controls from clicking -->
  <quad size="320 180" bgcolor="0000" scriptevents="1"/>
</frame>

<script><!-- {% include 'core.views/generics/scripts/includes.Script.Txt' %} --></script>
<script><!-- {% include 'core.views/generics/scripts/uiElements.Script.Txt' %} --></script>
{% block maniascript %} {% endblock %}
<script><!-- {% include 'core.views/generics/scripts/main.Script.Txt' %} --></script>
