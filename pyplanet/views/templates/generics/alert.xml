{% import 'core.views/generics/uiElements.xml' as ui %}

<frame pos="0 0" z-index="900">
  <quad pos="0 0" size="320 180" halign="center" valign="center" style="Bgs1" substyle="BgDialogBlur" bluramount="0.1" scriptevents="1" z-index="500" />
  <!-- <quad pos="{{ sizes.top__pos }}" size="{{ sizes.top__size }}" halign="center" valign="center" style="Bgs1InRace" substyle="BgGlow2" z-index="550" />
  <quad pos="{{ sizes.bottom__pos }}" size="{{ sizes.bottom__size }}" halign="center" style="Bgs1InRace" substyle="BgMetalBar" z-index="520" /> -->
  <quad size="{{ sizes.box__size }}" halign="center" valign="center" style="Bgs1InRace" substyle="BgSystemBar" opacity="0.9" z-index="501" />

  <frame z-index="550">
    {% block body %}
      <label pos="{{ sizes.text__pos }}" size="{{ sizes.text__size }}" halign="left" valign="center2" textsize="2" textcolor="FFF" autonewline="1" text="{{ message }}" />

      {% if buttons|length >= 2 %}
        {{ ui.decoratedbutton(buttons[0].name, id+"__button_0", sizes.button_0__pos__left, sizes.button_0__pos__top, 26, 5, "ddd") }}
        {{ ui.decoratedbutton(buttons[1].name, id+"__button_1", sizes.button_1__pos__left, sizes.button_1__pos__top, 26, 5, "ddd") }}
      {% elif buttons|length == 1 %}
        {{ ui.decoratedbutton(buttons[0].name, id+"__button_0", sizes.button_0__pos__left, sizes.button_0__pos__top, 26, 5, "ddd") }}
      {% else %}
        {{ ui.decoratedbutton("Ok", id+"__button_0", sizes.button_0__pos__left, sizes.button_0__pos__top, 26, 5, "ddd") }}
      {% endif %}
    {% endblock %}
  </frame>
</frame>


<script><![CDATA[ {% include 'core.views/generics/scripts/includes.Script.Txt' %} ]]></script>
<script><![CDATA[ {% include 'core.views/generics/scripts/uiElements.Script.Txt' %} ]]></script>
  {% block maniascript %} {% endblock %}
<script><![CDATA[ {% include 'core.views/generics/scripts/main.Script.Txt' %} ]]></script>

