{% set slot_size = 6.5 %}
{% set ctx = namespace(pos=3.25) %}

{% if game == 'sm' %}
  <!-- Shootmania does not support TimeAttack, so we exclude pay2extend -->
  {% set total_slots = 11 %}
{% elif game == 'tm_next' %}
  <!-- TM2020 does not support transactions, so we exclude pay2skip & pay2extend -->
  {% set total_slots = 10 %}
{% else %}
  {% set total_slots = 12 %}
{% endif %}

{% set toolbar_size = (total_slots + 1) * slot_size %}

{% macro next_slot() %}
  {% set ctx.pos = ctx.pos + slot_size %}
  {{ ctx.pos }}
{% endmacro %}

{% macro offset(relative) %}
  {{ ctx.pos + relative }}
{% endmacro %}

<frame pos="-160.25 -45.75" z-index="160" id="player_toolbar_bar_toggle_frame">
  <quad pos="0 -0.25" z-index="0" size="6.5 6" bgcolor="00000060"/>

  <!-- Icon -->
  <label pos="3.25 -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_toggle" scriptevents="1" />
</frame>


<frame pos="-153 -45.75" z-index="160" id="player_toolbar_bar_frame" hide="1">
  <quad pos="0 -0.25" z-index="0" size="{{ toolbar_size }} 6" bgcolor="00000060"/>

  <!-- Tooltip -->
  <quad pos="0 3.2" z-index="0" size="{{ toolbar_size }} 3.5" bgcolor="00000040" hidden="1" id="player_toolbar_bar_tooltip_quad"/>
  <label pos="35.75 1.5" z-index="1" size="{{ toolbar_size }} 3.5" text="$fffTooltip" halign="center" valign="center2"
         id="player_toolbar_bar_tooltip_text" textsize="0.9" hidden="1"/>

  <!-- Bar 1 Icons -->
  <label pos="{{ ctx.pos }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_button_list"
         scriptevents="1" action="{{ id }}__bar_button_list" />

  <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_button_mf"
         scriptevents="1" action="{{ id }}__bar_button_mf" />

  <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_button_jb"
         scriptevents="1" action="{{ id }}__bar_button_jb" />

  {% if game == 'sm' %}
    <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="&#xf079;" halign="center" valign="center2" id="player_toolbar_bar_button_replay" textsize="2.5"
         scriptevents="1" action="{{ id }}__bar_button_replay" bgcolor="0000" />
  {% else %}
    <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="🕑" halign="center" valign="center2" id="player_toolbar_bar_button_extend" textsize="2.5"
           scriptevents="1" action="{{ id }}__bar_button_extend" bgcolor="0000" />
    <label pos="{{ offset(1) }} -4.5" z-index="1" size="3 3" text="" halign="center" valign="center2"
           textsize="0.5" opacity="1" focusareacolor1="0000" focusareacolor2="0000" />

    {% if game != 'tm_next' %}
      <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="🕑" halign="center" valign="center2" id="player_toolbar_bar_button_pay2extend" textsize="2.5"
             scriptevents="1" opacity="1" action="{{ id }}__bar_button_pay2extend" bgcolor="0000" />
      <label pos="{{ offset(1) }} -4.5" z-index="1" size="3 3" text="" halign="center" valign="center2"
             textsize="0.5" opacity="1" focusareacolor1="0000" focusareacolor2="0000" />
      <label pos="{{ offset(3) }} -6.2" z-index="1" size="3.25 3" text="$$" halign="center" valign="center2"
             textsize="1.25" opacity="1" focusareacolor1="0000" focusareacolor2="0000" />
    {% endif %}
  {% endif %}

  <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="&#xe959;" halign="center" valign="center2"
           id="player_toolbar_bar_button_skip" textsize="2.5"
           scriptevents="1" action="{{ id }}__bar_button_skip" />

  {% if game != 'tm_next' %}
    <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="&#xe959;" halign="center" valign="center2"
          id="player_toolbar_bar_button_pay2skip" textsize="2.5"
          scriptevents="1" opacity="1" action="{{ id }}__bar_button_pay2skip" />
    <label pos="{{ offset(3) }} -6.2" z-index="1" size="3.25 3" text="$$" halign="center" valign="center2"
          textsize="1.25" opacity="1" focusareacolor1="0000" focusareacolor2="0000" />
  {% endif %}

  <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_button_topdons"
         scriptevents="1" action="{{ id }}__bar_button_topdons" />

  {% if game == 'sm' %}
    <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
           id="player_toolbar_bar_button_topactive"
           scriptevents="1" action="{{ id }}__bar_button_topactive" />
  {% else %}
    <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
           id="player_toolbar_bar_button_topsums"
           scriptevents="1" action="{{ id }}__bar_button_topsums" />
  {% endif %}

  <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_button_mxinfo" textsize="2.5"
         scriptevents="1" action="{{ id }}__bar_button_mxinfo" />

  <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_button_players"
         scriptevents="1" action="{{ id }}__bar_button_players" />

  <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_button_visibility_toggle" textsize="2.5"
         scriptevents="1" />

  <label pos="{{ next_slot() }} -3.2" z-index="1" size="6.5 6" text="" halign="center" valign="center2"
         id="player_toolbar_bar_button_help" textsize="2.5"
         scriptevents="1" action="{{ id }}__bar_button_help" />

</frame>


<script><!-- {% include 'core.pyplanet/toolbar.Script.Txt' %} --></script>
