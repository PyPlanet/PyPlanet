{% extends 'core.views/generics/dialog.xml' %}

{% block contents %}
<label pos="60 0" size="90 5" text="Select the folder you want the map to be inserted to."
       textsize="1.3" textcolor="FFF" halign="center"/>

<frame pos="10 -10">
  {% for folder in folders %}
<frame pos="0 -{{ loop.index0 * 5 }}">
  <button type="none" text="{{folder.icon }} {{folder.name}}" action="{{id}}__folder_select__{{folder.id.__str__()}}" pos="0 0" size="105 5" />
  {% if loop.index0 % 2 != 0 %}
  <quad pos="0 0" size="105.0 5" bgcolor="aaa1"/>
  {% else %}
  <quad pos="0 0" size="105.0 5" bgcolor="aaa2"/>
  {% endif %}
</frame>
{% endfor %}
</frame>

<decoratedbutton text="Cancel" action="{{id}}__button_cancel" pos="48 -124" size="26 5" />

{% endblock %}

