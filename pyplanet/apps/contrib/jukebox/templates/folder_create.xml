{% include 'core.views/style.xml' %}

<frame pos="0 17 0" z-index="250">
  <label pos="-20.5 57.8 0" size="60 7" text="  Create new folder" textsize="2.5" textcolor="FFFFFFF" halign="left"/>

  <button type="danger" text="✖" action="{{id}}__button_close" pos="49 59" size="6 6"/>

  <quad pos="0 62.5" size="120 127" halign="center" valign="top" style="Bgs1InRace" substyle="BgSystemBar" opacity="0.9"
        scriptevents="1"/>

  <frame pos="-54.5 45 0" id="folder_body" z-index="70">
    <label pos="0 0" size="30 5" text="$fff$oName" textsize="1.2" valign="top"/>
    <entry pos="30 0" size="75 4" name="folder_name" id="folder_name"
           textsize="1.2" scriptevents="1" focusareacolor1="0003" focusareacolor2="FFF2"/>

    <frame id="folder_privacy_container">
      <entry hidden="1" id="folder_privacy" name="folder_privacy" default="private"/>
      <checkbox text="Private, only you can manage it." action="{{cb_folder_private}}" pos="0 -5" checked="1"
                disabled="1" id="cb_private"/>
      <checkbox text="Public, readable by everyone, writable by admins. (only for admins)" action="{{cp_folder_public}}"
                pos="0 -10" disabled="{{is_admin}}" id="cb_public"/>
    </frame>

    <confirmbutton text="Save" action="{{id}}__button_save" pos="15 -100" size="24 6"/>
    <decoratedbutton text="Cancel" action="{{id}}__button_cancel" pos="80 -100" size="24 6"/>

  </frame>
</frame>

<script><![CDATA[ {% include 'core.views/generics/scripts/includes.Script.Txt' %} ]]></script>
<script><![CDATA[ {% include 'core.views/generics/scripts/uiElements.Script.Txt' %} ]]></script>
  {% block maniascript %}
<script><![CDATA[ {% include 'jukebox/folder_create.Script.Txt' %} ]]></script>
  {% endblock %}
<script><![CDATA[ {% include 'core.views/generics/scripts/main.Script.Txt' %} ]]></script>
