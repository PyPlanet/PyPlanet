{% extends 'core.views/uikit/v1/generics/bootstrap.xml' %}

{% block main %}
<frame pos="0 45" valign="center" halign="center" z-index="250">
  <label pos="-20.5 -2" size="60 7" text="  Create new folder" textsize="2.5" textcolor="FFFFFFF" halign="left"/>
  {{ ui.button_basic("✖", id+"__button_close", 52, 0, 6,6, "closeButton") }} >

    <frame pos="-55 -14" id="folder_body" valign="center" halign="center" z-index="70">
    <label pos="10 -2" size="20 5" text="Name: " textsize="1.2" valign="center2" halign="right"/>
    {{ ui.input("", "folder_name", 10, -2,75,4) }}

    <frame id="folder_privacy_container">
      <entry hidden="1" id="folder_privacy" name="folder_privacy" default="private"/>
      {{ ui.checkbox("Private, only you can manage it.", "cb_folder_private", 0,-5, 1, 1, "", "cb_private") }}
      {{ ui.checkbox("Public, readable by everyone, writable by admins. (only for admins)", "cp_folder_public", 0,-10, 0, is_admin, "", "cb_public" ) }}
    </frame>

    </frame>
      {{ ui.button_confirm("Save", id+"__button_save", -20, -43) }}
      {{ ui.button_outline("Cancel", id+"__button_cancel",4, -43) }}
      <quad pos="0 0" size="120 50" halign="center" valign="top" style="Bgs1InRace" substyle="BgSystemBar" opacity="0.9" scriptevents="1" />
</frame>
{% endblock %}

{% block maniascript %}
  <script><!-- {% include 'jukebox/folder_create.Script.Txt' %} --></script>
{% endblock %}
