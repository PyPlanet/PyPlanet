{% extends 'core.views/uikit/v1/generics/bootstrap.xml' %}

{% block main %}
<frame pos="0 17 0" z-index="250">
  <label pos="-20.5 57.8 0" size="60 7" text="  Create new folder" textsize="2.5" textcolor="FFFFFFF" halign="left"/>

  {{ ui.button_basic("✖", id+"__button_close", 49, 59, 6,6, "closeButton") }} >

  <quad pos="0 62.5" size="120 127" halign="center" valign="top" style="Bgs1InRace" substyle="BgSystemBar" opacity="0.9" scriptevents="1" />

    <frame pos="-54.5 45 0" id="folder_body" z-index="70">
    <label pos="0 0" size="30 5" text="$fff$oName" textsize="1.2" valign="top"/>
    <entry pos="30 0" size="75 4" name="folder_name" id="folder_name"
           textsize="1.2" scriptevents="1" focusareacolor1="0003" focusareacolor2="FFF2"/>

    <frame id="folder_privacy_container">
      <entry hidden="1" id="folder_privacy" name="folder_privacy" default="private"/>

      {{ ui.checkbox("Private, only you can manage it.", "cb_folder_private", 0,-5, 1, 1, "cb_private") }}
      {{ ui.checkbox("Public, readable by everyone, writable by admins. (only for admins)", "cp_folder_public", 0,-10, 0, is_admin, "cb_public" ) }}
    </frame>

    {{ ui.button_confirm("Save", id+"__button_save", 15,-100, 24,6) }}
    {{ ui.button_outline("Cancel", id+"__button_cancel",80, -100, 24,6) }}

  </frame>
</frame>
{% endblock %}

{% block maniascript %}
  <script><!-- {% include 'jukebox/folder_create.Script.Txt' %} --></script>
{% endblock %}
